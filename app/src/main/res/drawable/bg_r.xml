<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--定义渐变色-->
    <gradient
        />
    <!--定义圆角-->
    <corners
    android:radius="10dp" />
    <!--定义填充色-->
    <solid
        android:color="#ccc"
        />
    <!--定义描边属性-->
    <stroke
        android:width="1dp"
        android:color="#000"
        android:dashWidth="0dp"
        android:dashGap="0dp" />
</shape>